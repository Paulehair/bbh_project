{% extends 'base.html.twig' %}
{% block body %}

    <section class="Register">
        <div class="Register_container">
            <h1 class="Register_title">S'inscrire</h1>
            {{ form_start(form) }}
            {{ form_row(form.email, {'attr': {'class': 'RegisterForm_input'}}) }}
            {{ form_row(form.firstName, {'attr': {'class': 'RegisterForm_input'}}) }}
            {{ form_row(form.lastName, {'attr': {'class': 'RegisterForm_input'}}) }}
            {{ form_row(form.plainPassword.first, {'attr': {'class': 'RegisterForm_input'}}) }}
            {{ form_row(form.plainPassword.second, {'attr': {'class': 'RegisterForm_input'}}) }}
            <button class="Button" type="submit">Sign up</button>
            {{ form_end(form) }}
        </div>
    </section>


{% endblock %}