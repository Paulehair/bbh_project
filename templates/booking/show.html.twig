    <section class="ConfirmBooking">

        <div class="ConfirmBooking_container">

            <div class="ConfirmBooking_subContainer">
                <h1 class="ConfirmBooking_name">{{ booking.user.firstName }}  {{  booking.user.lastName }}</h1>
                <p class="ConfirmBooking_reservation">
                    <span class="ConfirmBooking_reservationItem">Réservation N°</span>
                    <span class="ConfirmBooking_reservationValue">{{ booking.reference }}</span>
                </p>

                <div class="ConfirmBookingDetails">
                    <div class="ConfirmBookingDetails_item">
                        <p class="ConfirmBookingDetails_itemName">Cabine :</p>
                        <p class="ConfirmBookingDetails_itemVal">{{ booking.cabin.name  }}</p>
                    </div>
                    <div class="ConfirmBookingDetails_item">
