{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1>Booking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Guest Quantity</th>
                <th>Cabin Type</th>
                <th>Cabin Price</th>
                <th>Departure Month</th>
                <th>Reference</th>
                <th>User Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.guestquantity }}</td>
                <td>{{ booking.cabin }}</td>
                <td>{{ booking.cabin.price }}</td>
                <td>{{ booking.month }}</td>
                <td>{{ booking.reference }}</td>
                <td>{{ booking.user }}</td>
                <td>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('booking_new') }}">Create new</a>
{% endblock %}
